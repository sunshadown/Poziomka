<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#6DA1CA"
    android:padding="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <Switch
        android:id="@+id/legacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Legacy"
        android:checked="true"
        android:layout_gravity="right"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="13dp" />

    <ImageView
        android:id="@+id/merger_s1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:clickable="true"
        android:background="#343E42"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/merger_s2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:background="#8CB8B8"
        android:text="Second Shadow"
        android:gravity="center"
        android:clickable="true"
        android:textSize="32dp"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/merger_lottie"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:clickable="true"
        app:lottie_fileName="keys.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/merge_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="textPassword"
            android:maxLength="12"/>
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
