<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#6DA1CA">


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:errorEnabled="true"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="textPassword"
            android:maxLength="12"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/generate_shadows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:lottie_fileName="locker.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true" />

    <TextView
        android:id="@+id/shadow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="32dp"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/shadow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="32dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp"
        android:orientation="horizontal">
        android:paddingTop="16dp" >
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/shadow1_share"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="left"
            app:lottie_fileName="imgshare.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/shadow2_share"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="right"
            app:lottie_fileName="txtshare.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />
    </LinearLayout>


</LinearLayout>